generator client {
  provider = "prisma-client"
  output   = "../generated/prisma"
}

datasource db {
  provider = "sqlite"
}

model User {
  id    String  @id @default(uuid())
  email String  @unique
  name  String?

  posts Post[]

  @@map("users")
}

model Post {
  id        String  @id @default(uuid())
  userId    String  @map("user_id")
  title     String
  content   String?
  published Boolean @default(false)

  user User @relation(fields: [userId], references: [id])

  @@map("posts")
}
